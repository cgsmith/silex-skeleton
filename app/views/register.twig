{% extends layout_template  %}

{% block title %}Register{% endblock %}

{% block content %}

    {% if app.user %}
        <p>{{ 'Hello'|trans }}, {{ app.user.displayName }}. {{ 'You are already registered and signed in.'|trans }}</p>
        <p><a href="{{ path('user.logout') }}">Sign out</a></p>

    {% else %}
        <h1>
            {{ 'Create an account'|trans }}
        </h1>

        <p class="text-muted lead">
            {{ 'Already have an account?'|trans }} <a href="{{ path('user.login') }}">{{ 'Sign in now.'|trans }}</a>
        </p>

        {% if error %}
            <div class="alert alert-danger">{{ error|nl2br }}</div>
        {% endif %}

        <form class="form-horizontal" method="POST">

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-name">{{ 'Name'|trans }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="name" type="text" id="input-name" placeholder="{{ 'Name'|trans }}" value="{{ name }}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-email">{{ 'Email'|trans }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="email" type="email" id="input-email" placeholder="{{ 'Email'|trans }}" required value="{{ email }}">
                    <span class="help-inline">{{ 'Never shared'|trans }}</span>
                </div>
            </div>

            {% if isUsernameRequired %}
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-username">Username</label>
                    <div class="col-sm-8">
                        <input class="form-control" name="username" type="text" id="input-username" placeholder="Username" required value="{{ username }}">
                    </div>
                </div>
            {% endif %}

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-password">{{ 'Password'|trans }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="password" type="password" id="input-password" required placeholder="{{ 'Password'|trans }}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-confirm-password">{{ 'Re-type password'|trans }}</label>
                <div class="col-sm-8">
                    <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="{{ 'Confirm password'|trans }}">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="submit" class="btn btn-primary">{{ 'Register'|trans }}</button>
                </div>
            </div>
        </form>

    {% endif %}
{% endblock %}

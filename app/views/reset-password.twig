{% extends layout_template  %}

{% block title %}{{ 'Reset your password'|trans }}{% endblock %}

{% block content %}

    <h1>
        {{ 'Choose a new password'|trans }}, {{ user.displayName }}
    </h1>

    {% if error %}
        <div class="alert alert-danger">{{ error|nl2br }}</div>
    {% endif %}

    <form class="form-horizontal" method="POST">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-password">{{ 'New password'|trans }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="password" type="password" id="input-password" required placeholder="{{ 'Password'|trans }}">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="input-confirm-password">{{ 'Re-type password'|trans }}</label>
            <div class="col-sm-8">
                <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="{{ 'Re-type password'|trans }}">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">{{ 'Save password'|trans }}</button>
            </div>
        </div>
    </form>

{% endblock %}
